{
  "model": {
    "arch": "transformer",
    "weight_init": "xavier",
    "pretrained": null,
    "use_chars": true,
    "char_layer":{
      "pretrained": null,
      "c_dim": 50,
      "c_in_dropout": 0.0,
      "layer":"cnn",
      "c_cnn_layers": [
        {"height": 3,"filters": 128,"dilation": 1}
      ],
      "c_rnn_layers": [
        {"cell": "lstm","dim": 200,"n_layers": 1,"bidirectional": true}
      ]
    },
    "w_dim": 256,
    "w_in_dropout": 0.0,
    "transformer":{
        "dim_forward": 2048,
        "n_layers": 2,
        "dropout":0.3,
        "nhead":8
      },
    "mid_dropout": 0.2
  },
  "optim": {
    "method": "adam",
    "lr": 0.001,
    "momentum": 0.0,
    "l2_loss": 0,
    "lr_scheduler": null,
    "step": 25,
    "decay":1.0
  },
  "train": {
    "batch_size": 256,
    "max_epochs": 100,
    "val_steps": 5,
    "patience": 5
  }
}
